<h1><%= @user.name %>さんのページ</h1>

<h2>投稿一覧</h2>

<% if @user == current_user %>
  <%= link_to '新規投稿', new_post_path, class: 'btn btn-primary' %>
<% end %>

<% @posts.each do |post| %>
  <div class="post">
    <h3><%= link_to post.title, post_path(post) %></h3>
    <p><%= truncate(post.body, length: 100) %></p>
  </div>
<% end %>
