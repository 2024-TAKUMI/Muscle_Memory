<h1>My page</h1>
<p>
  <strong>Name:</strong>
  <%= @user.name %>
</p>
<p>
  <strong>Email:</strong>
  <%= @user.email %>
</p>
<p>
  <strong>Profile Image:</strong><br>
  <% if @user.profile_img.present? %>
    <%= image_tag @user.get_profile_image(100, 100) %>
  <% else %>
    No profile image uploaded
  <% end %>
</p>
<p>
  <strong>Self Introduction:</strong>
  <%= @user.self_introduction %>
</p>
<%= link_to 'Edit', edit_public_user_path(@user) %>
<%= link_to 'Unsubscribe', unsubscribe_public_user_path(@user) %>