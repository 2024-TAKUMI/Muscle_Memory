<h2>プロフィール編集</h2>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :profile_img %><br>
    <%= f.file_field :profile_img %>
    <% if @user.profile_img.attached? %>
      <%= image_tag @user.profile_img, class: "profile-image" %>
    <% end %>
  </div>

  <div class="field">
    <%= f.label :self_introduction %><br>
    <%= f.text_area :self_introduction %>
  </div>

  <div class="actions">
    <%= f.submit "更新する" %>
  </div>
<% end %>

<%= link_to '戻る', user_path(@user) %>
