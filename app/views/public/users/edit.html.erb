<h1>Edit Profile</h1>
<%= form_for @user, url: public_user_path(@user), html: { method: :patch } do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :profile_img, "Profile Image URL" %><br>
    <%= f.text_field :profile_img %>
    <% if @user.profile_img.present? %>
      <%= image_tag @user.get_profile_image(100, 100) %>
    <% end %>
  </p>
  <p>
    <%= f.label :self_introduction, "Self Introduction" %><br>
    <%= f.text_area :self_introduction %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
<%= link_to 'Back', public_user_path(@user) %>