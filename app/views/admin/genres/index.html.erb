<h3>ジャンル設定</h3>
<%= form_with model: @new_genre, url: admin_genres_path, local: true, class: 'form-inline' do |f| %>
  <div class="form-group mb-2">
    <%= f.label :name, 'ジャンル名', class: 'sr-only' %>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <%= f.submit '追加', class: 'btn btn-primary mb-2' %>
<% end %>

<% if @new_genre.errors.any? %>
  <div class="alert alert-danger mt-2">
    <ul>
      <% @new_genre.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<h2>既存のジャンル</h2>
<ul class="list-group">
  <% @genres.each do |genre| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <%= genre.name %>
      <%= link_to '削除', admin_genre_path(genre), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger btn-sm' %>
    </li>
  <% end %>
</ul>

<button class="btn btn-secondary back-button mt-4">戻る</button>
