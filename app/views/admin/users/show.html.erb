<h3>ユーザー詳細</h3>
<div class="card">
  <div class="card-body">
    <p>ID: <%= @user.id %></p>
    <p>メールアドレス: <%= @user.email %></p>
    <%= link_to '削除する', admin_user_path(@user), method: :delete, data: { confirm: '本当に削除させますか？' }, class: 'btn btn-danger' %>
    <%= link_to '戻る', admin_users_path, class: 'btn btn-secondary' %>
  </div>
</div>
<button class="btn btn-secondary back-button mt-4">戻る</button>
