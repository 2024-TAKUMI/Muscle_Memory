<h3>ユーザー詳細</h3>
<div class="card">
  <div class="card-body">
    <p>ID: <%= @user.id %></p>
    <p>メールアドレス: <%= @user.email %></p>
    <%= link_to '削除する', admin_user_path(@user), method: :delete, data: { confirm: '本当に削除させますか？' }, class: 'btn btn-danger' %>
    <%= link_to '戻る', admin_users_path, class: 'btn btn-secondary' %>
  </div>
</div>

<h3>コメント一覧</h3>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>コメント内容</th>
      <th>操作</th>
    </tr>
  </thead>
  <tbody>
    <% @user.post_comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.content %></td>
        <td>
          <%= link_to '削除', admin_comment_path(comment), method: :delete, data: { confirm: '本当に削除しますか？' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to '戻る', 'javascript:history.back()', class: 'btn btn-flat' %>